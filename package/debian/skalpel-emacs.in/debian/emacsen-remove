#!/bin/sh -e
# /usr/lib/emacsen-common/packages/remove/skalpelemacs

FLAVOR=$1
PACKAGE=skalpelemacs

if [ ${FLAVOR} != emacs ]; then
    if test -x /usr/sbin/install-info-altdir; then
        echo remove/${PACKAGE}: removing Info links for ${FLAVOR}
        install-info-altdir --quiet --remove --dirname=${FLAVOR} /usr/local/share/info/skalpelemacs.info.gz
    fi

    echo remove/${PACKAGE}: purging byte-compiled files for ${FLAVOR}
    rm -rf /usr/local/share/${FLAVOR}/site-lisp/${PACKAGE}
fi
